/**index.wxss**/
@font-face {
  font-family: "iconfont"; /* Project id 3916172 */
  src: url('//at.alicdn.com/t/c/font_3916172_zhl4eh579m.woff2?t=1677249707197') format('woff2'),
       url('//at.alicdn.com/t/c/font_3916172_zhl4eh579m.woff?t=1677249707197') format('woff'),
       url('//at.alicdn.com/t/c/font_3916172_zhl4eh579m.ttf?t=1677249707197') format('truetype');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 50rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-align: center;
  margin-left: -5rpx;
  color:rgb(29, 66, 29);
}

.icon-shangchuantupian:before {
  content: "\e6e9";
}


.container{
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 50rpx;
}

.back{
  position: fixed;  /*关键属性，设置为fixed*/
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  /* background-image: url(https://picnew8.photophoto.cn/20140831/lvsebeijingban-lvse-beijingtupian-12996732_1.jpg); */
  background-position: center;
  filter: blur(5px);
  z-index: -1;
}

.content{
  padding: 0;
  /* margin-top: -20rpx; */
  width: 700rpx;
  height: 1000rpx;
  /* background-color: azure; */
}

.editor{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  /* background-color: pink; */
}

.editor-content{
  padding: 1rem;
  background-color: #fff;
  border-radius: 20rpx;
  height: 100%;
  width: 95%;
  border: 4rpx solid rgb(124, 196, 124);
  background-color: rgba(21, 67, 221, 0.3);
  box-sizing: border-box;
  color: #fff;
}

.pick_names{
  height: 80rpx;
  width: 50%;
  margin: 0 auto;
  margin-top: 0.5rem;
  background-color: #fff;
  line-height: 80rpx;
  text-align: center;
  color: rgb(206, 206, 206);
  border-radius: 20rpx;
  background-color: rgba(100, 100, 100, 0.5);
}

.text{
  background-color: #fff;
  width: 100%;
  margin-top: 40rpx;
  height: 75%;
  border-radius: 12rpx;
  border: 2rpx solid rgb(124, 196, 124);
  background-color: rgba(255, 255, 255, 0.3);
  padding: 40rpx;
  box-sizing: border-box;
  box-shadow: 0px 6rpx 20rpx rgba(255, 255, 255, 0.5);
}

.bottom{
  display: flex;
  margin: 0 auto;
  width: 95%;
}

.skin-choser{
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  margin-right: 30rpx;
  height: 100rpx;
  width: 75%;
  background-color: #fff;
  border-radius: 20rpx;
  border: 4rpx solid rgb(124, 196, 124);
  background-color: rgba(255, 255, 255, 0.3);
  box-sizing: border-box;
}

.image-choser{
  flex: 1;
  border-radius: 20rpx;
  /* border: 2px solid rgb(124, 196, 124); */
  background-color:  rgb(72, 163, 72);
  box-sizing: border-box;
}

.box{
  width:80rpx;
  height: 60rpx;
  margin: 0 8rpx;
  border: 1px solid rgb(124, 196, 124);
  box-sizing: border-box;
  box-shadow: 0px 6rpx 20rpx rgba(39, 39, 39, 0.5);
  background-color: rgb(66, 179, 66);
  border-radius: 20rpx;
}

.box.red{
  border: 1px solid rgb(196, 124, 124);
  background-color: rgb(230, 83, 108);
  /* background-color: rgb(114, 0, 19); */
}

.box.blue{
  border: 1px solid rgb(124, 179, 196);
  background-color: rgb(0, 129, 189);
  /* background-color: rgb(0, 59, 87); */
}

.box.yellow{
  border: 1px solid rgb(196, 189, 124);
  background-color: rgb(189, 129, 0);
  /* background-color: rgb(59, 41, 0); */
}

.box.black{
  border: 1px solid rgb(0, 0, 0);
  background-color: rgb(255, 255, 255);
  /* background-color: rgb(0, 0, 0); */
}

.share{
  margin-top: -20rpx;
}

.avatar{
  margin: 0 auto;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.wish{
  width: 100%;
  height: 100%;
  padding-top: 100rpx;
}

.title{
  font-size: 50rpx;
}

.wish-content{
  padding: 50rpx;
}